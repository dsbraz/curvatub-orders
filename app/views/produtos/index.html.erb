<h1>Listando os produtos</h1>

<table>
  <tr>
    <th>Fabricante</th>
    <th>Nome</th>
    <th class="action"></th>
    <th class="action"></th>
    <th class="action"></th>
  </tr>

<% @produtos.each do |produto| %>
  <tr>
    <td><%= produto.fabricante %></td>
    <td><%= produto.nome %></td>
    <td><%= link_to 'Mostrar', produto %></td>
    <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
    <td><%= link_to 'Remover', produto, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

